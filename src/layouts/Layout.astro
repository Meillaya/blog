---
interface Props {
  title: string;
  description?: string;
}
import type { CollectionEntry } from 'astro:content';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
import { createSearchablePost } from '../utils/search';
import '../styles/base.css';
import NavBar from '../components/NavBar.astro';

const { title, description = "A technical blog about software engineering and performance optimization" } = Astro.props;

// Get data for the burger menu
const blogPosts = await getCollection('blog');
const essaysPosts = await getCollection('essays'); 
const notesPosts = await getCollection('notes');

// Create searchable posts
const allPosts: (CollectionEntry<'blog'> | CollectionEntry<'essays'> | CollectionEntry<'notes'>)[] = [...blogPosts, ...essaysPosts, ...notesPosts];
const searchablePosts = allPosts.map(post => createSearchablePost(post));

// Get all tags
const allTags = new Set<string>();
allPosts.forEach(post => {
  const tags = post.data.tags || [];
  tags.forEach(tag => allTags.add(tag));
});
const tagsArray = Array.from(allTags).sort();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <!-- KaTeX CSS for rendering mathematical equations -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar posts={searchablePosts} tags={tagsArray} />
    <main>
      <slot />
    </main>
  </body>
</html>
<Footer></Footer>
<style is:global>
  :root {
    --max-width: 1000px;
    --font-size-base: 20px;
  }
  
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'EB Garamond', et-book, Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia, serif;
    background: var(--background);
    color: var(--text-color);
    line-height: 1.6;
    font-size: var(--font-size-base);
    user-select: none;
  }

  body {
    margin: 0 auto;
    padding: 2rem;
    max-width: var(--max-width);
  }

  /* REMOVED HEADER AND NAV STYLES */
  .search-input, .article-content, pre, code {
    user-select: auto;
  }

  /* General link styles */
  a {
    color: var(--link-color);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 2.2rem;
    font-weight: normal;
    margin: 2rem 0;
    line-height: 1.2;
  }

  h2 {
    font-size: 1.8rem;
    font-weight: normal;
    margin: 1.5rem 0;
    line-height: 1.2;
  }

  p {
    margin-bottom: 1.2rem;
    font-size: 1.1rem;
  }

  code {
    font-family: 'Menlo', monospace;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.85em;
  }

  pre {
    padding: 1.2rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Search Component Styles */
  .search-container {
    position: relative;
    width: 100%;
  }

  .search-form {
    margin-bottom: 0;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    background: white;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .search-input-wrapper:focus-within {
    border-color: var(--color-primary, #6a2fb8);
    box-shadow: 0 0 0 3px rgba(106, 47, 184, 0.1);
  }

  .search-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 0.9rem;
    padding: 0.75rem 1rem;
    background: transparent;
    color: var(--color-text, #333);
    font-family: inherit;
  }

  .search-input::placeholder {
    color: #999;
  }

  .search-button {
    background: var(--color-primary, #6a2fb8);
    border: none;
    padding: 0.75rem;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
  }

  .search-button:hover:not(:disabled) {
    background: var(--color-primary-dark, #5a1fa8);
  }

  .search-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>