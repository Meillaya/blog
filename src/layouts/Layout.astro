---
interface Props {
  title: string;
  description?: string;
}
import Footer from '../components/Footer.astro';
import { BurgerMenu } from '../components/BurgerMenu';
import { getCollection } from 'astro:content';
import { createSearchablePost } from '../utils/search';

const { title, description = "A technical blog about software engineering and performance optimization" } = Astro.props;

// Get data for the burger menu
const blogPosts = await getCollection('blog');
const essaysPosts = await getCollection('essays'); 
const notesPosts = await getCollection('notes');

// Create searchable posts
const searchablePosts = [
  ...blogPosts.map(post => createSearchablePost(post)),
  ...essaysPosts.map(post => createSearchablePost(post)),
  ...notesPosts.map(post => createSearchablePost(post))
];

// Get all tags
const allTags = new Set<string>();
[...blogPosts, ...essaysPosts, ...notesPosts].forEach(post => {
  const tags = post.data.tags || [];
  tags.forEach(tag => allTags.add(tag));
});
const tagsArray = Array.from(allTags).sort();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <!-- KaTeX CSS for rendering mathematical equations -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav class="main-nav">
        <a href="/" class="site-title">meillaya</a>
        
        <div class="nav-content">
          <div class="nav-links">
            <a href="/essays">ESSAYS</a>
            <a href="/notes">NOTES</a>
            <a href="/archive">ARCHIVE</a>
            <a href="/about">ABOUT</a>
          </div>
          
          <div class="burger-menu-container">
            <BurgerMenu 
              client:load 
              posts={searchablePosts} 
              tags={tagsArray} 
            />
          </div>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<Footer></Footer>
<style is:global>
  :root {
    --text-color: #000000;
    --link-color: #6a2fb8;
    --background: #FFF1E7;
    --max-width: 1000px;
    --font-size-base: 20px;
    --color-primary: #6a2fb8;
    --color-heading: #333;
    --color-text: #444;
    --color-text-light: #666;
    --color-card-bg: #FFF1E7;
  }
  
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'EB Garamond', et-book, Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia, serif;
    background: var(--background);
    color: var(--text-color);
    line-height: 1.6;
    font-size: var(--font-size-base);
  }

  body {
    margin: 0 auto;
    padding: 2rem;
    max-width: var(--max-width);
  }

  header {
    margin-bottom: 3rem;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    width: 100%;
  }

  .site-title {
    font-size: 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--text-color);
    transition: color 0.3s ease;
    flex-shrink: 0;
  }

  .site-title:hover {
    color: var(--color-primary);
  }

  .nav-content {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-links {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 2rem;
    flex-wrap: nowrap;
  }
  
  .nav-links a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 500;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
    position: relative;
    white-space: nowrap;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width 0.3s ease;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .burger-menu-container {
    display: flex;
    align-items: center;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    :root {
      --font-size-base: 18px;
    }
    
    body {
      padding: 1rem;
    }

    .main-nav {
      padding: 0.5rem 0;
    }

    .nav-content {
      gap: 1rem;
    }

    .nav-links {
      display: flex;
      flex-direction: row;
      gap: 1rem;
      align-items: center;
    }

    .nav-links a {
      font-size: 0.8rem;
    }

    .site-title {
      font-size: 1.3rem;
    }

    header {
      margin-bottom: 2rem;
    }
  }

  /* Very small screens - maintain horizontal nav */
  @media (max-width: 480px) {
    .main-nav {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .nav-content {
      justify-content: center;
      width: 100%;
      gap: 1.5rem;
    }

    .nav-links {
      display: flex;
      flex-direction: row;
      gap: 0.75rem;
      align-items: center;
    }

    .nav-links a {
      font-size: 0.75rem;
    }
  }

  /* General link styles */
  a {
    color: var(--link-color);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 2.2rem;
    font-weight: normal;
    margin: 2rem 0;
    line-height: 1.2;
  }

  h2 {
    font-size: 1.8rem;
    font-weight: normal;
    margin: 1.5rem 0;
    line-height: 1.2;
  }

  p {
    margin-bottom: 1.2rem;
    font-size: 1.1rem;
  }

  code {
    font-family: 'Menlo', monospace;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.85em;
  }

  pre {
    padding: 1.2rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Search Component Styles */
  .search-container {
    position: relative;
    width: 100%;
  }

  .search-form {
    margin-bottom: 0;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    background: white;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .search-input-wrapper:focus-within {
    border-color: var(--color-primary, #6a2fb8);
    box-shadow: 0 0 0 3px rgba(106, 47, 184, 0.1);
  }

  .search-input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 0.9rem;
    padding: 0.75rem 1rem;
    background: transparent;
    color: var(--color-text, #333);
    font-family: inherit;
  }

  .search-input::placeholder {
    color: #999;
  }

  .search-button {
    background: var(--color-primary, #6a2fb8);
    border: none;
    padding: 0.75rem;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
  }

  .search-button:hover:not(:disabled) {
    background: var(--color-primary-dark, #5a1fa8);
  }

  .search-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .search-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-height: 400px;
    overflow-y: auto;
    z-index: 1000;
    margin-top: 0.5rem;
  }

  .search-loading {
    padding: 1.5rem;
    text-align: center;
    color: var(--color-text-light, #666);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .loading-spinner {
    width: 16px;
    height: 16px;
    border: 2px solid #f3f3f3;
    border-top: 2px solid var(--color-primary, #6a2fb8);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .search-no-results {
    padding: 2rem 1.5rem;
    text-align: center;
    color: var(--color-text-light, #666);
  }

  .no-results-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    opacity: 0.5;
  }

  .search-no-results p {
    margin: 0.5rem 0;
    color: var(--color-text, #333);
  }

  .search-no-results small {
    color: var(--color-text-light, #666);
    font-size: 0.8rem;
  }

  .search-results-list {
    display: flex;
    flex-direction: column;
  }

  .search-result-item {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #f0f0f0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .search-result-item:hover {
    background: #f8f9fa;
  }

  .search-result-item:last-child {
    border-bottom: none;
  }

  .search-result-content {
    width: 100%;
  }

  .search-result-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--color-heading, #333);
    line-height: 1.3;
  }

  .search-result-description {
    font-size: 0.85rem;
    color: var(--color-text, #555);
    margin: 0 0 0.75rem;
    line-height: 1.4;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .search-result-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    font-size: 0.75rem;
    color: var(--color-text-light, #666);
  }

  .search-result-collection {
    background: var(--color-primary, #6a2fb8);
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .search-result-date {
    font-weight: 500;
  }

  .search-result-tags {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  .search-result-tag {
    background: #f0f0f0;
    padding: 0.1rem 0.4rem;
    border-radius: 3px;
    font-size: 0.7rem;
    color: var(--color-text, #555);
  }

  .search-result-tag.more {
    background: var(--color-primary, #6a2fb8);
    color: white;
  }

  .search-highlight {
    background: #fff3cd;
    padding: 0.1rem 0.2rem;
    border-radius: 3px;
    font-weight: 600;
    color: #856404;
  }
</style>