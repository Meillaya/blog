---
interface Props {
  title: string;
  description?: string;
}
import Footer from '../components/Footer.astro';
const { title, description = "A technical blog about software engineering and performance optimization" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="site-title">meillaya</a>
        <div class="nav-links">
          <a href="/about">ABOUT</a>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
<Footer></Footer>
<style is:global>
  :root {
    --text-color: #000000;
    --link-color: #6a2fb8;
    /* #8b0000; */
    --background: #FFE5C6;
    --max-width: 1000px;
    --font-size-base: 20px;
  }
  
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: 'EB Garamond', et-book, Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia, serif;
    background: var(--background);
    color: var(--text-color);
    line-height: 1.6;
    font-size: var(--font-size-base);
  }

  body {
    margin: 0 auto;
    padding: 2rem;
    max-width: var(--max-width);
  }

  header {
    margin-bottom: 3rem;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-size: 1.5rem;
    text-decoration: none;
    color: var(--text-color);
  }

  .nav-links a {
    margin-left: 2rem;
    text-decoration: none;
    color: var(--text-color);
  }

  a {
    color: var(--link-color);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 2.2rem;
    font-weight: normal;
    margin: 2rem 0;
    line-height: 1.2;
  }

  h2 {
    font-size: 1.8rem;
    font-weight: normal;
    margin: 1.5rem 0;
    line-height: 1.2;
  }

  p {
    margin-bottom: 1.2rem;
    font-size: 1.1rem;
  }

  code {
    font-family: 'Menlo', monospace;
    background: #f8f8f8;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.85em;
  }

  pre {
    background: #f8f8f8;
    padding: 1.2rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    :root {
      --font-size-base: 18px;
    }
    
    body {
      padding: 1rem;
    }
  }
</style>