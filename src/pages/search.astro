---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { createSearchablePost } from '../utils/search';
import type { SearchablePost } from '../utils/search';
import { SearchComponent } from '../components/SearchComponent';

// Get all posts from all collections
const blogPosts = await getCollection('blog');
const essaysPosts = await getCollection('essays');
const notesPosts = await getCollection('notes');

// Create searchable posts
const allPosts = [...blogPosts, ...essaysPosts, ...notesPosts];
const searchablePosts = allPosts.map(post => createSearchablePost(post));

// Sort by date (newest first)
searchablePosts.sort((a, b) => new globalThis.Date(b.publishDate).getTime() - new globalThis.Date(a.publishDate).getTime());
---

<Layout title="Search - meillaya" description="Search through all blog posts, essays, and notes">
  <div class="search-page">
    <div class="search-header">
      <h1>Search</h1>
      <p>Find articles, essays, and notes across all topics</p>
    </div>

    <div class="search-main">
      <SearchComponent 
        client:load
        posts={searchablePosts}
        placeholder="Search posts, essays, and notes..."
        className="main-search"
      />
    </div>

    <div class="search-stats">
      <div class="stats-container">
        <div class="stat-item">
          <div class="stat-number">{searchablePosts.length}</div>
          <div class="stat-label">Total Posts</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">{blogPosts.length}</div>
          <div class="stat-label">Articles</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">{essaysPosts.length}</div>
          <div class="stat-label">Essays</div>
        </div>
        <div class="stat-item">
          <div class="stat-number">{notesPosts.length}</div>
          <div class="stat-label">Notes</div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .search-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .search-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    padding-bottom: 1.5rem;
  }

  .search-header::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 3px;
  }

  .search-header h1 {
    font-size: 2.5rem;
    color: var(--color-heading, #333);
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .search-header p {
    font-size: 1.2rem;
    color: var(--color-text-light, #666);
    max-width: 600px;
    margin: 0 auto;
  }

  .search-main {
    margin-bottom: 3rem;
  }

  /* Enhanced search component styling for main search */
  :global(.main-search .search-input-wrapper) {
    position: relative;
    border: 2px solid #e1e5e9;
    border-radius: 16px;
    background: var(--color-card-bg, #FFF1E7);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    padding: 0 1rem;
    gap: 1rem;
    overflow: hidden;
  }

  :global(.main-search .search-input-wrapper:focus-within) {
    border-color: var(--color-primary);
    box-shadow: 0 6px 30px rgba(var(--color-primary-rgb), 0.2);
    transform: translateY(-2px);
  }

  :global(.main-search .search-icon) {
    color: var(--color-text-light, #666);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.3s ease;
  }

  :global(.main-search .search-input-wrapper:focus-within .search-icon) {
    color: var(--color-primary);
  }

  :global(.main-search .search-input) {
    flex: 1;
    border: none;
    outline: none;
    font-size: 1.1rem;
    padding: 1.25rem 0;
    background: transparent;
    color: var(--color-text, #333);
    font-family: inherit;
  }

  :global(.main-search .search-input::placeholder) {
    color: var(--color-text-light, #999);
  }

  :global(.main-search .search-clear) {
    background: none;
    border: none;
    color: var(--color-text-light, #666);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  :global(.main-search .search-clear:hover) {
    background: rgba(0, 0, 0, 0.1);
    color: var(--color-text, #333);
  }

  :global(.main-search .search-results) {
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    margin-top: 1rem;
    max-height: 500px;
    background: var(--color-card-bg, #FFF1E7);
    overflow: hidden;
  }

  :global(.main-search .search-results-list) {
    max-height: 500px;
    overflow-y: auto;
  }

  :global(.main-search .search-result-item) {
    padding: 1.25rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  :global(.main-search .search-result-item:hover) {
    background: rgba(var(--color-primary-rgb), 0.05);
    transform: translateX(5px);
  }

  :global(.main-search .search-result-item:last-child) {
    border-bottom: none;
  }

  :global(.main-search .search-result-title) {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-heading, #333);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  :global(.main-search .search-result-description) {
    color: var(--color-text, #666);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
    font-size: 0.95rem;
  }

  :global(.main-search .search-result-meta) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    font-size: 0.8rem;
  }

  :global(.main-search .search-result-collection) {
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 0.7rem;
  }

  :global(.main-search .search-result-date) {
    color: var(--color-text-light, #999);
    font-weight: 500;
  }

  :global(.main-search .search-result-tags) {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  :global(.main-search .search-result-tag) {
    background: rgba(var(--color-primary-rgb), 0.1);
    color: var(--color-primary);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.7rem;
    font-weight: 500;
  }

  :global(.main-search .search-highlight) {
    background: rgba(var(--color-primary-rgb), 0.2);
    color: var(--color-primary-dark, #5a1fa8);
    padding: 0.1rem 0.2rem;
    border-radius: 3px;
    font-weight: 600;
  }

  :global(.main-search .search-loading) {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    color: var(--color-text-light, #666);
  }

  :global(.main-search .loading-spinner) {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(var(--color-primary-rgb), 0.3);
    border-top: 2px solid var(--color-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  :global(.main-search .search-no-results) {
    text-align: center;
    padding: 2rem;
    color: var(--color-text-light, #666);
  }

  :global(.main-search .no-results-icon) {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .search-stats {
    margin-bottom: 3rem;
  }

  .stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1.5rem;
    background: var(--color-card-bg, #FFF1E7);
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .stat-item {
    text-align: center;
    padding: 1rem;
    background: var(--color-card-bg, #FFF1E7);
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.1);
  }

  .stat-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    display: block;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--color-text-light, #666);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .search-header h1 {
      font-size: 2rem;
    }

    .search-header p {
      font-size: 1rem;
    }

    .stats-container {
      grid-template-columns: repeat(2, 1fr);
      padding: 1.5rem;
      gap: 1rem;
    }

    .stat-item {
      padding: 0.75rem;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    :global(.main-search .search-input) {
      font-size: 1rem;
      padding: 1rem 0;
    }

    :global(.main-search .search-input-wrapper) {
      padding: 0 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .stats-container {
      grid-template-columns: 1fr;
    }

    .search-page {
      padding: 0 1rem;
    }
  }
</style> 