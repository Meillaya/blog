---
// src/components/BlogPostPreview.astro
const { title, date, description, url } = Astro.props;
---

<article>
  <h2><a href={url}>{title}</a></h2>
  <p>{new Date(date).toLocaleDateString()}</p>
  <p>{description}</p>
</article>

<style>
  article {
    margin-bottom: 2rem;
  }

  h2 {
    margin-bottom: 0.5rem;
  }
</style>
