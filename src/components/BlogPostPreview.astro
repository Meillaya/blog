---
interface Props {
  title: string;
  date: Date;
  description: string;
  url: string;
  readTime?: string;
}

const { title, date, description, url, readTime } = Astro.props;
---

<article class="blog-preview">
  <a href={url} class="blog-preview-link">
    <div class="blog-preview-content">
      <h3 class="blog-preview-title">{title}</h3>
      <div class="blog-preview-meta">
        <time datetime={date.toISOString()}>
          {date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {readTime && <span class="read-time">• {readTime}</span>}
      </div>
      <p class="blog-preview-description">{description}</p>
      <span class="read-more">Read more →</span>
    </div>
  </a>
</article>

<style>
.blog-preview {
  margin-bottom: 2rem;
}

.blog-preview-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

.blog-preview-link:hover .blog-preview-title {
  color: var(--accent-color-light);
}

.bg-dark .blog-preview-link:hover .blog-preview-title {
  color: var(--accent-color-dark);
}

.blog-preview-content {
  padding: 1.5rem;
  border-radius: 12px;
  background-color: var(--card-bg-light);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid var(--border-light);
}

.bg-dark .blog-preview-content {
  background-color: var(--card-bg-dark);
  border-color: var(--border-dark);
}

.blog-preview-content:hover {
  transform: translateY(-4px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.bg-dark .blog-preview-content:hover {
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.blog-preview-title {
  margin: 0 0 0.5rem 0;
  font-size: 1.5rem;
  transition: color 0.3s ease;
}

.blog-preview-meta {
  font-size: 0.9rem;
  color: var(--text-color-light);
  opacity: 0.8;
  margin-bottom: 1rem;
}

.bg-dark .blog-preview-meta {
  color: var(--text-color-dark);
}

.read-time {
  margin-left: 0.5rem;
}

.blog-preview-description {
  margin: 0;
  line-height: 1.6;
}

.read-more {
  display: inline-block;
  margin-top: 1rem;
  font-weight: 500;
  transition: transform 0.3s ease;
}

.blog-preview-content:hover .read-more {
  transform: translateX(4px);
}

@media (max-width: 768px) {
  .blog-preview-content {
    padding: 1.25rem;
  }

  .blog-preview-title {
    font-size: 1.25rem;
  }
}
</style>