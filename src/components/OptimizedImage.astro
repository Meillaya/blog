import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg' | 'jpeg';
  style?: string;
  class?: string;
  caption?: string;
}

const { 
  src, 
  alt, 
  width, 
  height, 
  quality = 80, 
  format = 'webp', 
  style = '', 
  class: className = '', 
  caption 
} = Astro.props;

// Determine if src is a string (remote or public path) or an imported image
const isRemoteOrPublic = typeof src === 'string';

<figure class:list={['optimized-image-container', className]}>
  {isRemoteOrPublic ? (
    <img 
      src={src} 
      alt={alt} 
      width={width} 
      height={height} 
      style={style} 
    />
  ) : (
    <Image 
      src={src}
      alt={alt}
      width={width}
      height={height}
      quality={quality}
      format={format}
      style={style}
    />
  )}
  
  {caption && <figcaption set:html={caption} />}
</figure>

<style>
  .optimized-image-container {
    margin: 1.5rem 0;
  }

  .optimized-image-container img {
    display: block;
    max-width: 100%;
    height: auto;
    margin: 0 auto;
  }

  .optimized-image-container figcaption {
    text-align: center;
    font-style: italic;
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #666;
  }
</style> 