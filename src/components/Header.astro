---
const navItems = [
  { path: '/', label: 'Home' },
  { path: '/blog', label: 'Blog' },
  { path: '/progress-reports', label: 'Progress' },
  { path: '/pages', label: 'About' },
];
---

<header class="site-header">
  <div class="container">
    <nav class="nav-wrapper">
      <ul class="nav-list">
        {navItems.map(({ path, label }) => (
          <li>
            <a href={path} class={Astro.url.pathname === path ? 'active' : ''}>
              {label}
            </a>
          </li>
        ))}
        <li>
          <button id="theme-toggle" aria-label="Toggle theme">
            <span class="theme-toggle-icon">ðŸŒ“</span>
          </button>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
.site-header {
  padding: 1.5rem 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.nav-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav-list {
  display: flex;
  gap: 2rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-list a {
  color: inherit;
  text-decoration: none;
  font-weight: 500;
  padding: 0.5rem 0;
  position: relative;
}

.nav-list a::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: var(--accent-color-light);
  transition: width 0.3s ease;
}

.bg-dark .nav-list a::after {
  background-color: var(--accent-color-dark);
}

.nav-list a:hover::after,
.nav-list a.active::after {
  width: 100%;
}

#theme-toggle {
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  font-size: 1.2rem;
  color: inherit;
}

@media (max-width: 768px) {
  .nav-list {
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }
}
</style>