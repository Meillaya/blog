---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata | string;
  alt: string;
  width?: number;
  height?: number;
  caption?: string;
  class?: string;
}

const { src, alt, width, height, caption, class: className = '' } = Astro.props;

// Cast to any to avoid TypeScript errors
const ImageComponent = Image as any;
---

<figure class:list={['custom-image', className]}>
  <ImageComponent 
    src={src}
    alt={alt}
    width={width}
    height={height}
  />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .custom-image {
    margin: 1.5rem 0;
  }
  
  .custom-image img {
    display: block;
    max-width: 100%;
    height: auto;
    margin: 0 auto;
  }
  
  .custom-image figcaption {
    text-align: center;
    font-style: italic;
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #666;
  }
</style> 