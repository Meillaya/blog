---
import { BurgerMenu } from './BurgerMenu';
import type { SearchablePost } from '../utils/search';

interface Props {
    posts: SearchablePost[];
    tags: string[];
}

const { posts, tags } = Astro.props;
---
<header>
    <nav class="main-nav">
      <a href="/" class="site-title">meillaya</a>
      
      <div class="nav-content">
        <div class="nav-links">
          <a href="/essays">ESSAYS</a>
          <a href="/notes">NOTES</a>
          <a href="/archive">ARCHIVE</a>
          <a href="/about">ABOUT</a>
        </div>
        
        <div class="burger-menu-container">
          <BurgerMenu 
            client:load 
            posts={posts} 
            tags={tags} 
          />
        </div>
      </div>
    </nav>
</header>
<style>
    header {
        margin-bottom: 3rem;
    }

    .main-nav {
        display: flex;
        align-items: center;
        position: relative;
        width: 100%;
        gap: 2rem;
    }

    .site-title {
        font-size: 1.5rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--text-color);
        transition: color 0.3s ease;
        flex-shrink: 0;
    }

    .site-title:hover {
        color: var(--color-primary);
    }

    .nav-content {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-left: auto;
    }

    .nav-links {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
        flex-wrap: nowrap;
    }
    
    .nav-links a {
        text-decoration: none;
        color: var(--text-color);
        font-weight: 500;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        transition: color 0.3s ease;
        position: relative;
        white-space: nowrap;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--color-primary);
        transition: width 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--color-primary);
    }

    .nav-links a:hover::after {
        width: 100%;
    }

    .burger-menu-container {
        display: flex;
        align-items: center;
    }
</style> 