---
import { BurgerMenu } from './BurgerMenu';

interface Props {
    posts: Array<{ title: string; collection: string; slug: string }>;
    tags: string[];
}

const { posts: _posts, tags: _tags } = Astro.props as Props;
---
<header>
    <nav class="main-nav">
      <a href="/" class="site-title">meillaya</a>

      <div class="nav-content">
        <div class="nav-links">
          <a href="/essays">ESSAYS</a>
          <a href="/projects">PROJECTS</a>
          <a href="/technical-writings">TECHNICAL WRITINGS</a>
        </div>

        <div class="burger-menu-container">
          <BurgerMenu
            client:load
            posts={_posts}
            tags={_tags}
          />
        </div>
      </div>
    </nav>
</header>
<style>
    header {
        margin-bottom: 1.5rem;
    }

    .main-nav {
        display: flex;
        align-items: center;
        position: relative;
        width: 100%;
        justify-content: space-between;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 1rem 2rem; /* Added vertical padding */
    }

    .site-title {
        font-size: 1.6rem;
        font-weight: 600;
        text-decoration: none;
        color: var(--text-color);
        transition: color 0.3s ease;
        flex-shrink: 0;
    }

    .site-title:hover {
        color: var(--color-primary);
    }

    .nav-content {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
        flex-wrap: nowrap;
    }

    .nav-links a {
        text-decoration: none;
        color: var(--text-color);
        font-weight: 500;
        font-size: 0.9rem; /* Smaller font size for nav links */
        letter-spacing: 0.5px;
        transition: color 0.3s ease;
        position: relative;
        white-space: nowrap;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--color-primary);
        transition: width 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--color-primary);
    }

    .nav-links a:hover::after {
        width: 100%;
    }

    .burger-menu-container {
        display: flex;
        align-items: center;
    }

    @media (max-width: 768px) {
      .nav-links {
        display: none;
      }

      .nav-content {
        margin-left: auto;
        gap: 0;
      }
    }
</style>
