---
import { BurgerMenu } from './BurgerMenu';
import type { SearchablePost } from '../utils/search';

interface Props {
    posts: SearchablePost[];
    tags: string[];
}

const { posts, tags } = Astro.props;
---
<header>
    <nav class="main-nav">
      <a href="/" class="site-title">meillaya</a>
      
      <div class="nav-content">
        <div class="nav-links">
          <a href="/essays">ESSAYS</a>
          <a href="/notes">NOTES</a>
          <a href="/archive">ARCHIVE</a>
          <a href="/about">ABOUT</a>
        </div>
        
        <div class="burger-menu-container">
          <BurgerMenu 
            client:load 
            posts={posts} 
            tags={tags} 
          />
        </div>
      </div>
    </nav>
</header>
<style>
    header {
        margin-bottom: 3rem;
    }

    .main-nav {
        display: flex;
        align-items: center;
        position: relative;
        width: 100%;
        justify-content: space-between;
    }

    .site-title {
        font-size: 1.5rem;
        text-decoration: none;
        color: var(--text-color);
    }

    .nav-content {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
        flex-wrap: nowrap;
    }
    
    .nav-links a {
        text-decoration: none;
        color: var(--text-color);
    }

    .burger-menu-container {
        display: flex;
        align-items: center;
    }
</style> 